generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  password  String
  todos     Todo[]
  projects  UserProject[]
}

model Todo {
  id        Int     @id @default(autoincrement())
  header    String
  content   String
  status    String
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}

model Project {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  users       UserProject[]
  todos       Todo[]
}

model UserProject {
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int

  @@id([userId, projectId]) // Composite primary key
}
